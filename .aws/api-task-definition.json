{
    "family": "summaryclipper-task",
    "containerDefinitions": [
        {
            "name": "summaryclipper-container",
            "image": "985533677496.dkr.ecr.sa-east-1.amazonaws.com/summaryclipper_api:latest",
            "cpu": 1536,
            "memory": 1280,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [],
            "command": [],
            "dockerLabels": {
                "com.datadoghq.ad.logs": "[{\"source\": \"summaryclipper\", \"service\": \"summaryclipper_api\"}]"
            },
            "environment": [
                {
                    "name": "PORT",
                    "value": "8080"
                },
                {
                    "name": "DD_SERVICE",
                    "value": "summaryclipper_api"
                },
                {
                    "name": "DD_ENV",
                    "value": "dev"
                },
                {
                    "name": "DD_AGENT_HOST",
                    "value": "datadog-agent"
                }
            ],
            "secrets": [
                {
                    "name": "OPENAI_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:sa-east-1:985533677496:secret:summaryclipper/openai_api_key-7iQPCG"
                }
            ],
            "mountPoints": [],
            "volumesFrom": []
        },
        {
            "name": "datadog-agent",
            "image": "public.ecr.aws/datadog/agent:latest",
            "cpu": 100,
            "memory": 512,
            "portMappings": [
                {
                    "hostPort": 8125,
                    "protocol": "udp",
                    "containerPort": 8125
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "containerPath": "/var/run/docker.sock",
                    "sourceVolume": "docker_sock",
                    "readOnly": true
                },
                {
                    "containerPath": "/host/sys/fs/cgroup",
                    "sourceVolume": "cgroup",
                    "readOnly": true
                },
                {
                    "containerPath": "/host/proc",
                    "sourceVolume": "proc",
                    "readOnly": true
                },
                {
                    "containerPath": "/opt/datadog-agent/run",
                    "sourceVolume": "datadog-agent-run",
                    "readOnly": false
                }
            ],
            "environment": [
                {
                    "name": "DD_SITE",
                    "value": "us5.datadoghq.com"
                },
                {
                    "name": "DD_PROCESS_AGENT_ENABLED",
                    "value": "true"
                },
                {
                    "name": "DD_APM_ENABLED",
                    "value": "true"
                },
                {
                    "name": "DD_LOGS_ENABLED",
                    "value": "true"
                },
                {
                    "name": "DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL",
                    "value": "true"
                },
                {
                    "name": "DD_CONTAINER_EXCLUDE_LOGS",
                    "value": "name:datadog-agent"
                }
            ],
            "secrets": [
                {
                    "name": "DD_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:sa-east-1:985533677496:secret:summaryclipper/datadog_api_key-hQi9V1"
                }
            ]
        }
    ],
    "volumes": [
        {
            "host": {
                "sourcePath": "/var/run/docker.sock"
            },
            "name": "docker_sock"
        },
        {
            "host": {
                "sourcePath": "/proc/"
            },
            "name": "proc"
        },
        {
            "host": {
                "sourcePath": "/sys/fs/cgroup/"
            },
            "name": "cgroup"
        },
        {
            "host": {
                "sourcePath": "/opt/datadog-agent/run"
            },
            "name": "datadog-agent-run"
        }
    ],
    "executionRoleArn": "arn:aws:iam::985533677496:role/ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "EC2"
    ],
    "cpu": "2048",
    "memory": "1948",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}