{
    "family": "summaryclipper-task",
    "volumes": [
        {
            "name": "docker-sock",
            "host": {
                "sourcePath": "/var/run/docker.sock"
            }
        },
        {
            "name": "proc",
            "host": {
                "sourcePath": "/proc/"
            }
        },
        {
            "name": "sys-fs-cgroup",
            "host": {
                "sourcePath": "/sys/fs/cgroup"
            }
        },
        {
            "name": "docker-containers",
            "host": {
                "sourcePath": "/var/lib/docker/containers"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "summaryclipper-container",
            "image": "985533677496.dkr.ecr.sa-east-1.amazonaws.com/summaryclipper_api:latest",
            "cpu": 1024,
            "memory": 1024,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [],
            "command": [],
            "environment": [
                {
                    "name": "PORT",
                    "value": "8080"
                },
                {
                    "name": "DD_SERVICE",
                    "value": "summaryclipper_api"
                },
                {
                    "name": "DD_ENV",
                    "value": "dev"
                },
                {
                    "name": "DD_LOGS_INJECTION",
                    "value": "true"
                }
            ],
            "secrets": [
                {
                    "name": "OPENAI_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:sa-east-1:985533677496:secret:summaryclipper/openai_api_key-7iQPCG"
                }
            ],
            "mountPoints": [],
            "volumesFrom": []
        },
        {
            "name": "datadog-agent",
            "image": "datadog/agent:latest",
            "cpu": 1024,
            "memory": 924,
            "portMappings": [
                {
                    "containerPort": 8125,
                    "hostPort": 8125,
                    "protocol": "udp"
                }
            ],
            "essential": true,
            "entryPoint": [],
            "command": [],
            "environment": [
                {
                    "name": "DD_SITE",
                    "value": "us5.datadoghq.com"
                },
                {
                    "name": "DD_LOGS_ENABLED",
                    "value": "true"
                },
                {
                    "name": "DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL",
                    "value": "true"
                },
                {
                    "name": "DD_CONTAINER_EXCLUDE_LOGS",
                    "value": "name:datadog-agent"
                }
            ],
            "secrets": [
                {
                    "name": "DD_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:sa-east-1:985533677496:secret:summaryclipper/datadog_api_key-hQi9V1"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "docker-sock",
                    "containerPath": "/var/run/docker.sock",
                    "readOnly": false
                },
                {
                    "sourceVolume": "proc",
                    "containerPath": "/host/proc",
                    "readOnly": false
                },
                {
                    "sourceVolume": "sys-fs-cgroup",
                    "containerPath": "/host/sys/fs/cgroup",
                    "readOnly": false
                },
                {
                    "sourceVolume": "docker-containers",
                    "containerPath": "/var/lib/docker/containers",
                    "readOnly": false
                }
            ],
            "volumesFrom": [
                {
                    "sourceContainer": "summaryclipper-container",
                    "readOnly": true
                }
            ]
        }
    ],
    "executionRoleArn": "arn:aws:iam::985533677496:role/ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "EC2"
    ],
    "cpu": "2048",
    "memory": "2048",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}